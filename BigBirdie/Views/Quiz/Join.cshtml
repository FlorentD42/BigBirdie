@model string

@{
    ViewData["Title"] = "Lobby";
}

<img class="d-block mx-auto mb-4 img-fluid" src="/img/Logo.png" alt="logo">

<div id="lobby" style="display: none;">

	<h2 class="pink-content h2-title m-3">Lobby</h2>

	<div class="m-3">
		<div class="row gx-4">

			<div class="col">
				<div class="pink-content pb-2">
					<h3 class="text-light">Règles du salon</h3>

					<div class="container">
						<div class="row g-2">

							<!-- code -->
							<div class="col-6 text-end">
								<label for="sessionCode" class="col col-form-label">Code du salon : </label>
							</div>
							<div class="col-6">
								<div class="input-group">
									<input type="text" class="form-control" readonly id="sessionCode" value="@Model" >
									<button class="btn btn-primary" type="button" id="copyCode">Copier</button>
								</div>
							</div>

							<!-- taille -->
							<div class="col-6 text-end">
								<label for="sessionSize" class="col col-form-label">Taille du salon : </label>
							</div>
							<div class="col-6">
								<select id="sessionSize" class="form-select rule-select">
									<option>5</option>
									<option>10</option>
									<option selected>20</option>
									<option>50</option>
									<option>100</option>
									<option>200</option>
								</select>
							</div>

							<!-- nb questions -->
							<div class="col-6 text-end">
								<label for="nbQuestions" class="col col-form-label">Nombre de questions : </label>
							</div>
							<div class="col-6">
								<select id="nbQuestions" class="form-select rule-select">
									<option>3</option>
									<option>5</option>
									<option selected>10</option>
									<option>15</option>
									<option>20</option>
									<option>30</option>
								</select>
							</div>

							<!-- temps de réponse -->
							<div class="col-6 text-end">
								<label for="questionTimer" class="col col-form-label">Temps de réponse : </label>
							</div>
							<div class="col-6">
								<select id="questionTimer" class="form-select rule-select">
									<option>5</option>
									<option selected>10</option>
									<option>15</option>
									<option>20</option>
									<option>25</option>
									<option>30</option>
								</select>
							</div>
						</div>
					</div>
				</div>
			</div>


			<div class="col">
				<div class="pink-content">
					<h3>En ligne <span id="onlineSpan"></span></h3>
					<div class="container px-2 pb-2">
						<div id="usersDiv" class="row g-2">
							<!-- Généré par quiz.js -->
							<!--
							<div class="col">
								<p class="p-2 ${style}">${user}</p>
							</div>
							-->
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div>
		<button id="startButton" class="btn main-button mx-2" style="display: none;">Commencer</button>
		<button id="leaveButton" class="btn main-button mx-2">Quitter</button>
	</div>
</div>

<div id="question" class="mx-lg-5" style="display: none;">

	<div class="container">
		<div class="row g-2">

			<div class="col-12 ">
				<div class="p-3 ">
					<div class="question-title">
						<div class="p-2" id="question_text"></div>

						<div class="progress">
						  <div class="progress-bar" role="progressbar" id="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
						</div>
					</div>
				</div>
			</div>

			<div class="col-6">
				<div class="p-3">
					<div class="btn-group d-grid" role="group">
						<input type="radio" class="btn-check" id="radio_answer_0" name="btnradio" value="0">
						<label class="btn btn-question" for="radio_answer_0" id="answer_0"></label>
					</div>
				</div>
			</div>
			<div class="col-6">
				<div class="p-3">
					<div class="btn-group d-grid" role="group">
						<input type="radio" class="btn-check" id="radio_answer_1" name="btnradio" value="1">
						<label class="btn btn-question" for="radio_answer_1" id="answer_1"></label>
					</div>
				</div>
			</div>
			<div class="col-6">
				<div class="p-3">
					<div class="btn-group d-grid" role="group">
						<input type="radio" class="btn-check" id="radio_answer_2" name="btnradio" value="2">
						<label class="btn btn-question" for="radio_answer_2" id="answer_2"></label>
					</div>
				</div>
			</div>
			<div class="col-6">
				<div class="p-3">
					<div class="btn-group d-grid" role="group">
						<input type="radio" class="btn-check" id="radio_answer_3" name="btnradio" value="3">
						<label class="btn btn-question" for="radio_answer_3" id="answer_3"></label>
					</div>
				</div>
			</div>
		</div>
	</div>

	<button id="continueButton" class="btn main-button mt-4" style="display: none;">Continuer</button>
</div>

<div id="scores" class="mx-lg-5" style="display: none;"> 
	<div class="row justify-content-center">
		<div class="col-6">
			<h2 class="pink-content h2-title m-3">Scores</h2>

			<div id="scoreboard" class="pink-content m-3">
				<!-- Généré par quiz.js -->
			</div>
		</div>
	</div>
	<button id="leaveButton2" class="btn main-button mt-4">Quitter</button>
</div>

@section scripts {
	<script type="text/javascript">
		var code = "@Model.ToString()";
	</script>
	<script src="~/lib/signalr/dist/browser/signalr.min.js"></script>
	<script src="~/js/quiz.js"></script>
}