<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Big Birdie</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <meta property="og:title" content="Big Birdie" />
    <meta name="twitter:title" content="Big Birdie" />
    <meta name="twitter:text:title" content="Big Birdie" />

    <meta name="description" content="Le Birdie Quizz de Leaprima !" />
    <meta
      property="og:description"
      content="Le Birdie Quizz de Leaprima !"
    />
    <meta
      name="twitter:description"
      content="Le Birdie Quizz de Leaprima !"
    />

    <meta
      property="og:image"
      content="https://cdn.discordapp.com/emojis/842113745111220235.webp"
    />
    <meta
      name="twitter:image"
      content="https://cdn.discordapp.com/emojis/842113745111220235.webp"
    />
    <meta name="twitter:card" content="app" />
    @*<link rel="stylesheet" href="~/BigBirdie.styles.css" asp-append-version="true" />*@
</head>
<body>

    <main role="main" class="main-container" >
        <div class=" text-center bg-image  h-100">
            @RenderBody()
        </div>
    </main>

    <footer class="footer text-white text-center">
        <div class="container">
            <p>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="link-info">Accueil</a> -
                <a asp-area="" asp-controller="Home" asp-action="Informations" class="link-info">Info</a>

            @if (@Context.User.Identity.IsAuthenticated) 
            {
                @if(@Context.User.IsInRole("Admin"))
                {
                    <span>- <a asp-action="Index" asp-controller="Role" class="link-info">Admin</a></span>
                }
                <span> - @Context.User.Identity.Name <a asp-controller="Twitch" asp-action="Logout" class="link-info">[DÃ©connexion]</a></span>
            }
            </p>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
