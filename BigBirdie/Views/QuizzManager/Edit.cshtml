                <label asp-for="Wiki" class="control-label"></label>
                <input asp-for="Wiki" class="form-control" />
                <span asp-validation-for="Wiki" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
 </form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
