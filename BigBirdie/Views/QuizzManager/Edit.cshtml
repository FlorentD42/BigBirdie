            </div>
            <div class="form-group">
                <label asp-for="prop3" class="control-label"></label>
                <input asp-for="prop3" class="form-control" />
                <span asp-validation-for="prop3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="prop4" class="control-label"></label>
                <input asp-for="prop4" class="form-control" />
                <span asp-validation-for="prop4" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rep" class="control-label"></label>
