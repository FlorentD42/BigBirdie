@using BigBirdie.Account

@model IEnumerable<ApplicationRole>
@{
    ViewData["Title"] = "Rôles";
}

<div class="d-flex flex-column" style="height:inherit">
    <div class="bg-white my-4 col-lg-8 mx-auto p-2">

        <h1 class="bg-info text-white">Tous les rôles</h1>
        <a asp-action="Create" class="btn btn-secondary">Ajouter un rôle</a>
        <br />
  
        <table class="table table-sm table-bordered table-bordered">
            <tr><th>ID</th><th>Rôle</th><th>Utilisateurs</th><th>Éditer</th><th>Supprimer</th></tr>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td i-role="@role.Id"></td>
                    <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Éditer</a></td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Supprimer
                            </button>
                        </form>
                    </td>
                </tr>
            }
            <tr>
                <td></td>
                <td>Aucun rôle</td>
                <td i-role="-1"></td>
                <td></td>
                <td>
                </td>
                </tr>
        </table>

    </div>

    <div class="mt-auto p-2">
        <div class="row">
            <div class="col-md-3"><a href="/" class="btn btn-danger">Back</a></div>
            <div class="col-md-6"></div>
            <div class="col-md-3"></div>
        </div>
    </div>
</div>
