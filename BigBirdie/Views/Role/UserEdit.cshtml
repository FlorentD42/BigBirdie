@using BigBirdie.Account
@model UserEdit

<div class="fs-2 my-4 col-lg-8 mx-auto">
    <div class="badge bg-success"><span>@Model.User.UserName</span>'s roles</div>
    <form method="post">
        <input type="hidden" name="userId" value="@Model.User.Id" />
        @foreach (string role in @Model.UserRoles)
        {
            <input type="hidden" name="oldRoles" value="@role" />
        }

        <div class="rounded bg-black bg-opacity-50 text-white" style="margin-top:100px">
            @foreach (ApplicationRole role in @Model.RolesAvailables)
            {
                <div class="row">
                    <div class="col-md-3">

                    </div>
                    <div class="col-md-6">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" name="newRoles" role="switch" id="@role.Name" checked="@Model.userHasRole(role.Name)" value="@role.Name">
                            <label class="form-check-label" for="@role.Name">@role</label>
                        </div>
                    </div>
                    <div class="col-md-3">

                    </div>
                </div>
                
            }
        </div>
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    </form>
</div>